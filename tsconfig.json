{
  "compilerOptions": {
    "target": "ES2016",
    "lib": ["ES6"],
    "module": "NodeNext",
    "moduleResolution": "Node16",
    "baseUrl": "dist/",
    "outDir": "./dist",
    "sourceMap": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strict": false,
    
  },
  "ts-node": {
    "esm": true
  },
  "include": [
    "src/**/*.ts",
    "tests/*.ts",
  ],
  "exclude": ["node_modules", "dist"]

}